<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <size android:width="400dp" android:height="140dp"/>
            <stroke android:width="1dp" android:color="#585858" />
            <solid android:color="#A8D6E4" />
            <padding android:bottom="1dp"/>
        </shape>
    </item>
    <item
        android:gravity="left"
        android:left="10dp" android:top="20dp"
        android:bottom="20dp" android:right="200dp">
        <shape
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <solid android:color="#FFEB3B" />
            <padding android:bottom="1dp" />
        </shape>
    </item>
    <item
        android:gravity="right"
        android:left="200dp" android:top="20dp"
        android:bottom="20dp" android:right="10dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ffffff" />
            <solid android:color="#AEEB7A" />
            <padding android:bottom="1dp"/>
        </shape>
    </item>
</layer-list>

